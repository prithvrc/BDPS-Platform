<!DOCTYPE html>
<html>
<head>
  <title>SchoolHub</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-black text-white overflow-x-hidden">

<div class="min-h-screen flex flex-col md:flex-row">

  <!-- DESKTOP SIDEBAR -->
  <aside class="hidden md:flex md:w-64 border-r border-gray-800 p-6 flex-col">
    <h1 class="text-2xl font-bold mb-8">SchoolHub</h1>

    <nav class="space-y-4">
      <a href="/feed" class="block hover:text-indigo-400">Home</a>
      <a href="/profile" class="block hover:text-indigo-400">Profile</a>
      <% if (user.role === "admin") { %>
        <a href="/admin" class="block hover:text-indigo-400">Admin</a>
      <% } %>
      <a href="/logout" class="block hover:text-red-400">Logout</a>
    </nav>
  </aside>

  <!-- MAIN CONTENT -->
  <main class="flex-1 pb-20 md:pb-0">

    <div class="w-full max-w-2xl mx-auto px-4 py-6">

      <!-- MOBILE HEADER -->
      <div class="md:hidden flex justify-between items-center mb-6">
        <h1 class="text-xl font-bold">SchoolHub</h1>
        <a href="/profile" class="text-indigo-400">Profile</a>
      </div>

      <!-- POST BOX -->
      <div class="bg-gray-900 rounded-2xl p-4 mb-6 border border-gray-800">
        <form method="POST" action="/post" enctype="multipart/form-data" class="space-y-4">

          <textarea name="content"
            placeholder="What's happening?"
            required
            class="w-full bg-gray-800 p-3 rounded-xl focus:outline-none focus:ring-2 focus:ring-indigo-500 resize-none text-base"></textarea>

          <input type="file" name="media"
            accept="image/*,video/*"
            class="text-sm text-gray-400">

          <button class="w-full bg-indigo-600 hover:bg-indigo-500 transition py-3 rounded-xl font-semibold">
            Post
          </button>

        </form>
      </div>

      <!-- POSTS -->
      <% posts.forEach(post => { %>

        <div class="bg-gray-900 rounded-2xl p-4 mb-6 border border-gray-800">

          <div class="flex justify-between items-center mb-2">
            <a href="/profile/<%= post.user_id %>"
               class="font-semibold text-indigo-400 hover:underline text-sm md:text-base">
              <%= post.username %>
            </a>

            <span class="text-xs text-gray-500">
              <%= post.created_at %>
            </span>
          </div>

          <p class="text-gray-200 text-base leading-relaxed">
            <%= post.content %>
          </p>

          <% if (post.media) { %>
            <div class="mt-4">
              <% if (post.media.match(/\.(jpg|jpeg|png|gif|webp)$/i)) { %>
                <img src="/uploads/<%= post.media %>"
                     class="w-full rounded-xl object-cover max-h-[500px]">
              <% } else { %>
                <video controls class="w-full rounded-xl max-h-[500px]">
                  <source src="/uploads/<%= post.media %>">
                </video>
              <% } %>
            </div>
          <% } %>

          <% if (post.user_id === user.id) { %>
            <form method="POST" action="/delete/<%= post.id %>" class="mt-3">
              <button class="text-sm text-red-500 hover:text-red-400">
                Delete
              </button>
            </form>
          <% } %>

        </div>

      <% }) %>

    </div>

  </main>

</div>

<!-- MOBILE BOTTOM NAV -->
<div class="fixed bottom-0 left-0 right-0 bg-black border-t border-gray-800 md:hidden flex justify-around py-3">
  <a href="/feed" class="text-indigo-400 text-sm">Home</a>
  <a href="/profile" class="text-gray-400 text-sm">Profile</a>
  <% if (user.role === "admin") { %>
    <a href="/admin" class="text-gray-400 text-sm">Admin</a>
  <% } %>
</div>

</body>
</html>
