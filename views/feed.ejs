<!DOCTYPE html>
<html>
<head>
  <title>SchoolHub</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-black text-white">

<div class="flex h-screen max-w-7xl mx-auto">

  <!-- Sidebar (Desktop Only) -->
  <aside class="hidden md:flex md:w-64 border-r border-gray-800 p-6 flex-col">
    <h1 class="text-2xl font-bold mb-10">SchoolHub</h1>

    <nav class="space-y-4">
      <a href="/feed" class="block text-lg hover:text-indigo-400">Home</a>
      <a href="/profile" class="block text-lg hover:text-indigo-400">Profile</a>

      <% if (user.role === "admin") { %>
        <a href="/admin" class="block text-lg hover:text-indigo-400">Admin</a>
      <% } %>

      <a href="/logout" class="block text-lg hover:text-indigo-400">Logout</a>
    </nav>
  </aside>

  <!-- Main Feed -->
  <main class="flex-1 overflow-y-auto">

    <!-- Mobile Top Bar -->
    <div class="md:hidden flex justify-between items-center p-4 border-b border-gray-800">
      <h1 class="text-xl font-bold">SchoolHub</h1>
      <a href="/profile" class="text-indigo-400">Profile</a>
    </div>

    <!-- Post Box -->
    <div class="p-4 md:p-6 border-b border-gray-800">
      <form method="POST" action="/post" enctype="multipart/form-data">
        <textarea name="content"
          placeholder="What's happening?"
          class="w-full bg-transparent text-lg md:text-xl focus:outline-none resize-none"
          required></textarea>

        <input type="file" name="media"
          class="mt-3 text-sm text-gray-400"
          accept="image/*,video/*">

        <div class="flex justify-end mt-4">
          <button class="bg-indigo-600 px-5 md:px-6 py-2 rounded-full hover:bg-indigo-500 transition">
            Post
          </button>
        </div>
      </form>
    </div>

    <!-- Posts -->
    <% posts.forEach(post => { %>
      <div class="p-4 md:p-6 border-b border-gray-800 hover:bg-gray-900 transition">

        <div class="flex justify-between mb-2">
          <a href="/profile/<%= post.user_id %>"
             class="font-semibold text-indigo-400 hover:underline">
            <%= post.username %>
          </a>
          <span class="text-xs md:text-sm text-gray-500">
            <%= post.created_at %>
          </span>
        </div>

        <p class="text-gray-200 text-base md:text-lg leading-relaxed">
          <%= post.content %>
        </p>

        <% if (post.media) { %>
          <div class="mt-4">
            <% if (post.media.match(/\.(jpg|jpeg|png|gif|webp)$/i)) { %>
              <img src="/uploads/<%= post.media %>"
                   class="rounded-xl max-h-96 w-full object-cover">
            <% } else { %>
              <video controls class="rounded-xl max-h-96 w-full">
                <source src="/uploads/<%= post.media %>">
              </video>
            <% } %>
          </div>
        <% } %>

        <% if (post.user_id === user.id) { %>
          <form method="POST" action="/delete/<%= post.id %>" class="mt-3">
            <button class="text-sm text-red-500 hover:text-red-400">
              Delete
            </button>
          </form>
        <% } %>

      </div>
    <% }) %>

  </main>

  <!-- Right Panel (Desktop Only) -->
  <aside class="hidden lg:block w-80 p-6">
    <div class="bg-gray-900 rounded-2xl p-6">
      <h2 class="text-lg font-bold mb-4">Community</h2>
      <p class="text-gray-400 text-sm">
        Private school network.
      </p>
    </div>
  </aside>

</div>

<!-- Mobile Bottom Nav -->
<div class="md:hidden fixed bottom-0 left-0 right-0 bg-black border-t border-gray-800 flex justify-around py-3">
  <a href="/feed" class="text-indigo-400">Home</a>
  <a href="/profile" class="text-gray-400">Profile</a>
  <% if (user.role === "admin") { %>
    <a href="/admin" class="text-gray-400">Admin</a>
  <% } %>
</div>

</body>
</html>
